<%=javascript_include_tag :custom%>
<%= form_for @admin_filter, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :condition , :class => 'control-label' %>
    <div class="controls">
		  <%= f.select :condition, [['Order Amount','order_amount'],['Order Gateway','order_gateway'],['Order Email','order_email'],['Order Country','order_country']]%>
			<%=f.select :operator,[['is','is'],['> than','greater_than'],['<','less_than'],['> than','greater_than_eql'],['<','less_than_eql']]%>
		  <%= f.text_field :value %><br/><br/>
    do <%= f.select :action_type ,[['Cancel Order','cancel_order'],['Send an Email','send_an_email'],['Send an SMS','send_an_sms'],['Close Order','close_order']],:prompt=>true%>
			</div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_filters_path, :class => 'btn' %>
  </div>
<% end %>
